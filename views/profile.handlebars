{{!-- views/profile.hbs --}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{user.username}}'s Profile</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

  <header>
    <h1>{{username}}'s Profile</h1>
    <p>Welcome back, {{username}}!</p>
  </header>

  {{!-- User Details Section --}}
  <section class="user-details">
    <h2>Your Information</h2>
    <p><strong>Email:</strong> {{email}}</p>
    {{!-- <p><strong>Member Since:</strong> {{formatDate}}</p> --}}
  </section>

  {{!-- User Comments Section --}}
  <section class="user-comments">
    <h2>Your Comments</h2>
    {{#if comments.length}}
      <ul class="comments-list">
        {{#each comments}}
          <li>
            <strong>{{this.movie_id}}</strong> - {{this.content}} <br>
            {{!-- <em>Posted on: {{formatDate this.createdAt}}</em> --}}
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>You havenâ€™t commented on any movies yet. Join the conversation by leaving your thoughts on a movie!</p>
    {{/if}}
  </section>

  {{!-- Logout Button --}}
  <section class="logout">
    <form action="/logout" method="POST">
      <button type="submit" class="btn-logout">Logout</button>
    </form>
  </section>

  <footer>
    <p>&copy; {{currentYear}} Movie & TV Show Platform. All rights reserved.</p>
  </footer>

</body>
</html>
