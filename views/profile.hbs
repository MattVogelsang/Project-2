{{!-- views/profile.hbs --}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{user.username}}'s Profile</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

  <header>
    <h1>{{user.username}}'s Profile</h1>
    <p>Welcome back, {{user.username}}!</p>
  </header>

  {{!-- User Details Section --}}
  <section class="user-details">
    <h2>Your Information</h2>
    <p><strong>Email:</strong> {{user.email}}</p>
    <p><strong>Member Since:</strong> {{formatDate user.createdAt}}</p>
  </section>

  {{!-- User Ratings Section --}}
  <section class="user-ratings">
    <h2>Your Ratings</h2>
    {{#if user.ratings.length}}
      <ul class="ratings-list">
        {{#each user.ratings}}
          <li>
            <strong>{{this.movie.title}}</strong> - Rated: {{this.rating}}/5 stars
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>You haven’t rated any movies yet. Start exploring to rate your favorites!</p>
    {{/if}}
  </section>

  {{!-- User Comments Section --}}
  <section class="user-comments">
    <h2>Your Comments</h2>
    {{#if user.comments.length}}
      <ul class="comments-list">
        {{#each user.comments}}
          <li>
            <strong>{{this.movie.title}}</strong> - {{this.commentText}} <br>
            <em>Posted on: {{formatDate this.createdAt}}</em>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>You haven’t commented on any movies yet. Join the conversation by leaving your thoughts on a movie!</p>
    {{/if}}
  </section>

  {{!-- Logout Button --}}
  <section class="logout">
    <form action="/logout" method="POST">
      <button type="submit" class="btn-logout">Logout</button>
    </form>
  </section>

  <footer>
    <p>&copy; {{currentYear}} Movie & TV Show Platform. All rights reserved.</p>
  </footer>

</body>
</html>
